                  <%= link_to "Questionnaire", occasion_path(o),class: "btn btn-gradient"  %>
                <% end %>  </li>
            <% end %>
          </ul>
        </div>
        <!-- end navigation buttons -->
      </div>
      <!-- card separation -->
    </div>
