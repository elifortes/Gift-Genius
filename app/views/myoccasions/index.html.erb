<div class="p-2 bd-highlight w-100" style="height:650px;padding:-10px;background-color:#F2A59E;color:white">
  <h1>Gift genius Dashboard </h1>
  <h2>As Creator</h2>
  <% @myoccasions.each do |g| %>
    <% if g.recipient %>
      recipient: <%= User.find(g.recipient).personnal.name %><br>
      <%= link_to "see Group details", myoccasion_path(g),class: "btn btn-dark"  %>
      <%= link_to "go to genius results", proposals_path,class: "btn btn-dark" %>
    <% end %>
  <% end %>
  <hr>
  <h2>Questionnaires</h2>
  <% @occasions.each do |o| %>
