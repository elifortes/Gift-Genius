      recipient: <%= User.find(o.recipient).personnal.name %><br>
      <%= link_to "see Group details", occasion_path(o),class: "btn btn-dark"  %>
      <%= link_to "go to genius results", proposals_path,class: "btn btn-dark" %>
    <% end %>
  <% end %>
</div>
