        @myoccasion.save!
      end
      @myoccasion.groups.each do |o|
          user = User.find(o)
          occasion = Occasion.new(
            recipient: @myoccasion.recipient,
            gift: @gift.id
          )
          occasion.myoccasion = @myoccasion
