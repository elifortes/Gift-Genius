<div class="w-100 background-img" style="height:600px;background-color:white">
  <div class="card p-2" >
    <h4>Creating a group for this unique Occasion!</h4>
    <%= simple_form_for @myoccasion do |f| %>
      <%= f.input :recipient, collection:@mycontacts %>
      <%= f.input :photo, as: :file %>
      <div class=" h-50 overflow-auto p-4" style="height:200px">
        <h4>select the member of the group</h4>
        <%= f.input :groups, as: :check_boxes, collection:@mycontacts, label_method: :name , value_method: :user_id %>
      </div>
      <%= f.button :submit,class: 'btn btn-success mt-2' %>
    <% end %>
