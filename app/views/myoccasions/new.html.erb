             <div>
            <%= f.button :submit, 'Submit', class: 'btn btn-gradient mt-2'%>
            </div>
          <div class="icon-and-label" onclick="toggleContactList();" style="cursor: pointer;">
                <h4>   <i class="fa-solid fa-user-plus" style="color:black"></i></h4>
              </div>

            </div>
          <% end %>
        </div>
      </div>
    <br>

  <%# <div class="card border-0 p-1 m-2" style="height: 300px"> %>

