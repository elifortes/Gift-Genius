
<%# <div class="p-2" style="background-color:#E1F2FC"> %>
 <div class="p-2">
  <%# <h4>Group for this occasion</h4> %>

  <style>
  .centered-text {
    text-align: center; /* Centers text horizontally */
    font-weight: bold; /* Makes text bold */
    color: #000000; /* Strong black color */
  }
</style>

<style>
  .icon-and-label {
    display: flex;
    align-items: center; /* Align items vertically */
    margin-left: 05px; /* Adjust this value to move items to the right */
  }

  .icon-and-label i {
    color: #164863;
    margin-right: 10px; /* Space between icon and label */
    cursor: pointer;
  }

  .icon-and-label h4 {
    color: #000000;
    margin-bottom: 0; /* Remove bottom margin from h4 */
  }

      .form-check .form-check-input {
      float: right; /* Move checkboxes to the right side */
      margin-right: 1.5em; /* Adjust as needed */
    }

    /* Additional styles for the checkboxes */
    .form-check-input {

      flex-shrink: 0;
      width: 1em;
      height: 1em;
      margin-top: 0.25em;
      vertical-align: top;
      -webkit-appearance: none;
      -moz-appearance: none;
      appearance: none;
      background-color: var(--bs-form-check-bg);
      background-image: var(--bs-form-check-bg-image);
      background-repeat: no-repeat;
      background-position: left;
      background-size: contain;
      border: var(--bs-border-width) solid #324151;
      -webkit-print-color-adjust: exact;

    }
</style>


<h2 class="centered-text">Group List</h2>

<%= simple_form_for @myoccasion do |f| %>
  <%= f.input :recipient, collection: @mycontacts %>
  <%= f.input :photo, as: :file %>

 <div class="h-50 overflow-auto p-4" style="height:300px" >
    <div class="icon-and-label" onclick="toggleContactList();">
      <i class="fa-solid fa-user-plus fa-lg"></i>
      <h4>Contacts</h4>
    </div>

    <!-- This div will be toggled by clicking on the icon -->
    <div id="contactList" class="checkbox-group" style="display: none;">
      <%= f.input :groups, as: :check_boxes, collection: @mycontacts, label_method: :name, value_method: :id %>
    </div>
  </div>

  <%= f.button :submit, class: 'btn btn-success mt-2' %>
<% end %>





<script>
  // Function to toggle the contact list visibility
  function toggleContactList() {
    var contactList = document.getElementById('contactList');
    contactList.style.display = contactList.style.display === 'none' ? 'block' : 'none';
  }
</script>

<style>
  .checkbox-group label {
    color: #000000; /* Your desired color for checkbox labels */
  }

  /* Additional styles can be added here if needed */
</style>
</div>
