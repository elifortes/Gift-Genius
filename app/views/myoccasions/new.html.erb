<div class="w-100 " style="height:600px;background-color:white">
  <div class="p-2">
    <%# <h4>Group for this occasion</h4> %>
    <h2 class="centered-text">Group List</h2>
    <%= simple_form_for @myoccasion do |f| %>
      <%= f.input :recipient, collection: @mycontacts %>
      <%= f.input :photo, as: :file %>
      <div class="h-50 overflow-auto p-4" style="height:300px" >
        <div class="icon-and-label" onclick="toggleContactList();">
          <i class="fa-solid fa-user-plus fa-lg"></i>
          <h4>Contacts</h4>
        </div>
        <!-- This div will be toggled by clicking on the icon -->
        <div id="contactList" class="checkbox-group" style="display: none;">
          <%= f.input :groups, as: :check_boxes,  collection: @mycontacts, label_method: :name, value_method: :id, label: false  %>
        </div>
      </div>
      <%= f.button :submit, class: 'btn btn-success mt-2' %>
    <% end %>
    <script>
      // Function to toggle the contact list visibility
      function toggleContactList() {
        var contactList = document.getElementById('contactList');
        contactList.style.display = contactList.style.display === 'none' ? 'block' : 'none';
      }
    </script>
  </div>
</div>
