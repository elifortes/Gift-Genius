          <%= p.label :favorites, 'Select  favorite movies:' %>
          <%= p.input :favorites, collection:@movies,as: :check_boxes %>
           <%= p.label :favorites, 'Select  favorite channels:' %>
          <%= p.input :favorites, collection:@channels, as: :check_boxes %>
           <%= p.label :favorites, 'Select  favorite books:' %>
          <%= p.input :favorites, collection:@books, as: :check_boxes %>
           <%= p.label :favorites, 'Select  favorite hobbies:' %>
          <%= p.input :favorites, collection:@hobbies, as: :check_boxes %>
           <%= p.label :favorites, 'Select  favorite music:' %>
          <%= p.input :favorites, collection:@music, as: :check_boxes %>
          <%# <%= p.input :hobbies, as: :check_boxes, collection:@profile.hobbies %>
          <%= p.button :submit, class: 'btn btn-primary' %>

        <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
</div>
