<nav>
  <% if @notify_user %>
    <script type="text/javascript">
      document.addEventListener('turbolinks:load', () => {
          // Assuming `alert` is the correct controller name
          const notificationElement = document.querySelector('[data-controller="alert"]');
          if (notificationElement) {
              notificationElement.dispatchEvent(new Event('click'));
          }
      });
    </script>
  <% end %>
