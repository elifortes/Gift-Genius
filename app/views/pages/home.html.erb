<!-- New home page -->
<div class="p-2 w-100 bg-body" style="height:680px;background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path 'e989fd2b0040ce13ddab2f9b98075435', height: 300, crop: :fill %>')">
  <div class="">
    <div class="card p-2 m-1 ">
      <%# <h2 class="">Gift Genius</h2> %>
      <% if current_user %>
        <h4 class="my-2", style="text-align: center;">
          Welcome back, <%= current_user.personnal.name if current_user.personnal %></h4>
      <% end %>
    </div>
    <!-- Notifications / Open space area -->
    <div class="card h-75 overflow-auto p-2 m-1">
      <h4><strong>Hightlights</strong></h4>
      <!-- notifications -->
      <% if current_user %>
        <div class="card-trip">
          <%= image_tag "occasion/#{@gift.title}.jpg", alt: "",class: "img" %>
          <div class="card-trip-infos">
            <div>
              <h2 style="text-align: center;"> Get Ready to Celebrate: </h2> <br>
              <h2 style="text-align: center;"><%= User.find(@myoccasion.recipient).personnal.name %>'s <% if @gift.title %> <%= @gift.title %> is Coming Up!</h2>
                <% end %>
            </div>
            <%= image_tag @recipient.personnal.info['picture'], alt: "",class: "card-trip-user avatar-square" %>
          </div>
        </div>
      <% end %>
      <% unless current_user  %>
        <%= image_tag "option1.png", alt: "",class: "img" %>
      <% end %>
      <!-- card separation -->
      <div class="card-product mt-4 d-none">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2>Product name</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
      </div>
      <!--end notification avatar -->
      <div class="none">
        <!-- display the next birthday -->
      </div>
      <!-- notifications  occasions-->
      <!--end notification occasions -->
      <div class="none">
      </div>
    </div>
    <!-- end Notifications / Open space area -->
  </div>
  <!-- navigation buttons -->
  <div class="btn-group w-100 mt-1 p-1">
    <%= link_to "Gift Genius",myoccasions_path,class: "btn btn-gradient col-6 m-1" %>
    <%= link_to "Create New", myoccasions_new_path,class: "btn btn-success btn-gradient col-6 m-1"  %>
  </div>
  <!-- end navigation buttons -->
  <!-- footer -->
</div>
