<div class="d-flex align-items-start flex-column bd-highlight mb-3 ">
  <div class="p-2 bd-highlight w-100 background-img" style="height:650px">
    <h1>Pages#home</h1>
    <p>Find me in app/views/pages/home.html.erb</p>
    <h2>
      <% if  current_user %>
        Welcome back,   <%= current_user.personnal.name if current_user.personnal %></h2>
      <p>Some upcoming birthday!</p>
      <ul class="list list-group list-flush">
        <% if current_user %>
          <p>from user.mycontacts.contacts</p>
          <% @mycontacts.last(2).each do |c| %>
            <li class="list-group-item">
              <%= c.personnal.name  %>
              <%= c.personnal.birthday %>
            </li>
          <% end %>
        <% end %>
      </ul>
      <hr>
    <% end %>
    <br>
    <%= link_to "Go to genius results",myoccasions_path,class: "btn btn-dark" %>
  </div>
  <div class="btn-group  m-2">
    <%= link_to "Create MyOccasion", myoccasions_new_path,class: "btn btn-dark"  %>
  </div>
</div>
