<div class="d-flex align-items-start flex-column bd-highlight mb-3">
  <div class="p-2 bd-highlight w-100" style="height:650px;padding:-10px;background-color:#E1F2FC;color:black">
    <h1>Pages#home</h1>
    <p>Find me in app/views/pages/home.html.erb</p>
    <h2>
      <% if  current_user %>
        Welcome back,   <%= current_user.personnal.name if current_user.personnal %></h2>
      <p>Some upcoming birthday!</p>
      <ul class="list list-group list-flush">
        <% if current_user %>
          <% unless current_user.user_contacts.empty? %>
            <% current_user.user_contacts.sample(2).each do |c| %>
              <li class="list-group-item">
                <%= c.contact.user.personnal.name  %>
                <%= c.contact.user.personnal.birthday %>
              </li>
            <% end %>
          <% end %>
          <hr>
          <p>from user.mycontacts.contacts</p>
          <% @mycontacts.last(2).each do |c| %>
            <li class="list-group-item">
              <%= c.personnal.name  %>
              <%= c.personnal.birthday %>
            </li>
          <% end %>
        <% end %>
      </ul>
      <hr>
    <% end %>
