<h1>QUESTIONNAIRE</h1>

<%= simple_form_for @question  do |f| %>
  <div class="form-group">
    <%= f.label :content, "How would you describe your friend's lifestyle?" %>
    <%= f.select :content, options_for_select(['Select', 'Active', 'Sedentary', 'Balanced']), { include_blank: true }, class: 'form-select' %>
  </div>

  <div class="form-group">
    <%= f.label :content, "What are your friend's interests?" %>
    <%= f.select :content, options_for_select(['Select', 'Reading', 'Sports', 'Music', 'Art']), { include_blank: true }, class: 'form-select' %>
  </div>
  <br>

  <%= f.button :submit, "Submit", class: "btn custom-primary-button" %>
<% end %>
